{
  "name": "nanumpay",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm dev:web",
    "dev:web": "pnpm --filter nanumpay-web dev",
    "build:web": "pnpm --filter nanumpay-web build",
    "start:web": "pnpm --filter nanumpay-web start",
    "release:linux": "pnpm --filter nanumpay-web release:linux",
    "release:win": "pnpm --filter nanumpay-web release:win",
    "deploy:build": "pnpm build:web && pnpm release:linux",
    "deploy:install": "sudo dpkg -i apps/web/release/nanumpay_0.0.1-*_amd64.deb",
    "deploy:restart": "sudo systemctl restart nanumpay",
    "deploy:status": "sudo systemctl status nanumpay --no-pager -l",
    "deploy:logs": "sudo journalctl -u nanumpay -f",
    "dev:app": "pnpm --filter nanumpay-app dev",
    "build:app": "pnpm --filter nanumpay-app build",
    "cap:sync": "pnpm --filter nanumpay-app cap:sync",
    "cap:android": "pnpm --filter nanumpay-app cap:android",
    "cap:ios": "pnpm --filter nanumpay-app cap:ios"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
