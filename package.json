{
  "name": "nanumpay",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm dev:web",
    "dev:web": "pnpm --filter nanumpay-web dev",
    "build:web": "pnpm --filter nanumpay-web build",
    "start:web": "pnpm --filter nanumpay-web start",
    "release:linux": "pnpm --filter nanumpay-web release:linux",
    "release:win": "pnpm --filter nanumpay-web release:win",
    "release:deploy:web": "pnpm deploy:build && node apps/web/scripts/deploy.cjs",
    "deploy:build": "bash apps/backup/build.sh && pnpm build:web && pnpm release:linux",
    "deploy:install": "sudo dpkg -i apps/web/release/nanumpay_0.0.1-*_amd64.deb",
    "deploy:restart": "sudo systemctl restart nanumpay",
    "deploy:status": "sudo systemctl status nanumpay --no-pager -l",
    "deploy:logs": "sudo journalctl -u nanumpay -f",
    "dev:app": "pnpm --filter nanumpay-app dev",
    "build:app": "pnpm --filter nanumpay-app build",
    "cap:sync": "pnpm --filter nanumpay-app cap:sync",
    "cap:android": "pnpm --filter nanumpay-app cap:android",
    "cap:ios": "pnpm --filter nanumpay-app cap:ios",
    "android:setup": "cd apps/app && ./setup-android-env.sh",
    "android:build": "cd apps/app && ./auto-build.sh",
    "android:build:debug": "cd apps/app && ./auto-build.sh debug",
    "android:build:release": "cd apps/app && ./auto-build.sh release",
    "android:clean": "cd apps/app/android && ./gradlew clean",
    "app:setup": "pnpm android:setup",
    "app:build:android": "pnpm android:build:debug",
    "app:build:android:release": "pnpm android:build:release"
  },
  "devDependencies": {
    "form-data": "^4.0.4",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "mongodb": "^6.20.0",
    "node-fetch": "^3.3.2",
    "panzoom": "^9.4.3",
    "xlsx": "^0.18.5"
  }
}
