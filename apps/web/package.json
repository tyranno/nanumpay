{
	"name": "nanumpay-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "node scripts/generate-build-info.cjs && vite dev",
		"build": "node scripts/generate-build-info.cjs && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"release:linux": "pnpm build && node scripts/release-linux.cjs",
		"release:win": "pnpm build && node scripts/release-win.cjs",
		"deploy:build": "pnpm release:linux",
		"deploy:install": "sudo dpkg -i release/nanumpay_0.0.1-*_amd64.deb",
		"deploy:restart": "sudo systemctl restart nanumpay",
		"deploy:status": "sudo systemctl status nanumpay --no-pager -l",
		"deploy:logs": "sudo journalctl -u nanumpay -f"
	},
	"devDependencies": {
		"@capacitor/cli": "^7.4.3",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@jesterkit/exe-sveltekit": "^0.1.4",
		"@prisma/client": "^6.16.2",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.39.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"cross-env": "^10.0.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"exceljs": "^4.4.0",
		"globals": "^16.4.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"prisma": "^6.16.2",
		"svelte": "^5.38.10",
		"tailwindcss": "^4.1.13",
		"vite": "^7.1.5"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.3",
		"@capacitor/core": "^7.4.3",
		"@capacitor/ios": "^7.4.3",
		"@tanstack/svelte-table": "^8.21.3",
		"@vincjo/datatables": "^2.6.4",
		"archiver": "^7.0.1",
		"bcryptjs": "^2.4.3",
		"d3": "^7.9.0",
		"dotenv": "^16.3.1",
		"file-saver": "^2.0.5",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.0.0",
		"multer": "^2.0.2",
		"node-cron": "^4.2.1",
		"svelte-table": "^0.6.5",
		"tabulator-tables": "^6.3.1",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"wx-svelte-core": "^2.3.1",
		"xlsx": "^0.18.5"
	}
}
